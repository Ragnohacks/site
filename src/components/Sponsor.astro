---
import { Image } from "astro:assets";
import ssiCanadaImage from "../assets/sponsor/ssi-canada.png";
import shopifyImage from "../assets/sponsor/shopify.png";
import analogDevicesImage from "../assets/sponsor/analog-devices.png";
---

<section
  class="overflow-x-clip flex justify-center flex-col bg-dino-teal py-24 pb-32 md:py-44 md:pb-80"
  id="sponsors"
>
  <div class="text-center md:px-5 space-y-12">
    <div class="uppercase">
      <h2
        class="text-4xl text-teal-50 mt-5 lg:text-5xl font-bold tracking-wide"
      >
        Sponsor a
      </h2>
      <h2 class="text-7xl font-adumu text-white lg:text-8xl">
        Magical weekend
      </h2>
    </div>

    <div class="space-y-6">
      <p class="text-white text-2xl px-2">
        Help make Ottawaâ€™s first in-person high school hackathon happen!
      </p>
      <div class="text-white flex flex-col items-center space-y-1">
        <a
          href="mailto:team@ragnohacks.ca"
          target="_blank"
          class="px-12 py-1 text-lg text-white rounded-full md:py-2 md:px-16 bg-dino-neon-orange motion-safe:transition-all motion-safe:hover:scale-105 motion-safe:hover:shadow"
        >
          Send us an email!
        </a>
        <a
          href="mailto:team@ragnohacks.ca"
          target="_blank"
          class="text-teal-50 text-sm">team@ragnohacks.ca</a
        >
      </div>
    </div>
    <div class="flex flex-col items-center text-white">
      <p class="py-2">Thank you to our sponsors!</p>
      <div
        class="max-w-6xl bg-white w-full flex flex-col items-center p-8 md:p-12 py-8 md:py-20 md:rounded-3xl gap-8 md:gap-12"
      >
        <a
          href="https://www.shopify.com/"
          target="_blank"
          class="motion-safe:hover:scale-105 motion-safe:transition-all flex"
        >
          <Image src={shopifyImage} alt="Shopify" class="w-auto h-20 md:h-40" />
        </a>
        <div
          class="flex gap-x-12 items-center flex-wrap justify-center gap-y-8"
        >
          <a
            href="https://www.analog.com/"
            target="_blank"
            class="motion-safe:hover:scale-105 motion-safe:transition-all flex"
          >
            <Image
              src={analogDevicesImage}
              alt="Analog Devices"
              class="w-auto h-28 md:h-40"
            />
          </a>
          <a
            href="https://www.ssicanada.com/"
            target="_blank"
            class="motion-safe:hover:scale-105 motion-safe:transition-all flex"
          >
            <Image
              src={ssiCanadaImage}
              alt="SSi Canada"
              class="w-auto h-28 md:h-40"
            />
          </a>
        </div>
        <a
          href="https://dorahacks.io/"
          target="_blank"
          class="motion-safe:hover:scale-105 motion-safe:transition-all flex"
        >
          <img
            src="/sponsor/dorahacks.svg"
            alt="DoraHacks"
            class="w-auto h-12 md:h-16"
          />
        </a>
      </div>
    </div>
  </div>
</section>
