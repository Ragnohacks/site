// Function to generate random position and rotation
const generateRandomTransform = () => {
  const x = Math.floor(Math.random() * 80) - 50; // Random x between -10 and 10
  const y = Math.floor(Math.random() * 20) - 10; // Random y between -10 and 10
  const rotation = Math.floor(Math.random() * 20) - 10; // Random rotation between -10 and 10
  return `translate(${x}px, ${y}px) rotate(${rotation}deg)`;
};

const cardContainer =
  "rounded-md p-4 text-md sm:text-md md:text-xl sm:w-64 md:w-80 text-center transition-transform hover:rotate-0 bg-white";
---
<section class="bg-dino-dark-teal h-svh">
  <div class="max-w-6xl relative mx-auto">
    <div class="hidden sm:block">
      <div class="grid grid-cols-2 gap-6 items-center justify-center justify-items-center"> {/* Change flex to grid for 2-column layout */}
        {
          cards.map((card, index) => (
            <div
              class="border-black border-3 rounded-md bg-white text-center w-fit"
              style={{ transform: generateRandomTransform() }} // Apply random transform to each card
              key={index}
            >
              {card.card ? (
                <div class={`${cardContainer} ${card.position}`}>
                  <h1 class="border-2 border-dino-dark-teal p-5 text-black">
                    {card.text}
                  </h1>
                </div>
              ) : (
                <img
                  src={card.imgsrc}
                  alt=""
                  class={`w-52 ${card.position}`}
                />
              )}
            </div>
          ))
        }
      </div>
    </div>

    {/* mobile */}
    <div class="sm:hidden flex flex-col gap-5 items-center pt-10">
      {
        cards.map((card, index) => (
          <div
            class="border-black border-3 rounded-md bg-white text-center"
            style={{ transform: generateRandomTransform() }} // Apply random transform to each card
            key={index}
          >
            {card.card ? (
              <div class="border-black border-3 rounded-md bg-white p-4 w-64 text-center transition-transform hover:rotate-0">
